{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "preserveConstEnums": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "baseUrl": "./src",
        "paths": {
            "@feature/*": ["feature/*"],
            "@pages/*": ["pages/*"],
            "@common/*": ["common/*"],
            "@apis/*": ["apis/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts", "**/*.css"]
}
